{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "image": {
      "$id": "#/properties/image",
      "type": "object",
      "title": "Image",
      "required": [
        "repository",
        "tag"
      ],
      "properties": {
        "repository": {
          "$id": "#/properties/image/properties/repository",
          "type": "string",
          "title": "Repository",
          "default": "nginx",
          "description": "The image to deploy",
          "examples": [
            "nginx"
          ]
        },
        "tag": {
          "$id": "#/properties/image/properties/tag",
          "type": "string",
          "title": "Tag",
          "default": "1.19.3",
          "examples": [
            "2.23"
          ]
        }
      }
    },
    "replicas": {
      "$id": "#/properties/replicas",
      "type": "integer",
      "title": "Replicas",
      "description": "The number of instances to run",
      "default": 1
    },
    "containerPort": {
      "$id": "#/properties/containerPort",
      "type": "integer",
      "title": "Container Port",
      "description": "The port your application listens on",
      "default": 8080,
      "examples": [
        8080
      ]
    },
    "resources": {
      "$id": "#/properties/resources",
      "type": "object",
      "title": "Resources",
      "properties": {
        "requests": {
          "$id": "#/properties/resources/properties/requests",
          "type": "object",
          "title": "Requests",
          "description": "The typical resources your app uses",
          "required": [
            "cpu",
            "memory"
          ],
          "properties": {
            "cpu": {
              "$id": "#/properties/resources/properties/requests/properties/cpu",
              "type": "string",
              "title": "CPU"
            },
            "memory": {
              "$id": "#/properties/resources/properties/requests/properties/memory",
              "type": "string",
              "title": "Memory"
            }
          }
        },
        "limits": {
          "$id": "#/properties/resources/properties/limits",
          "type": "object",
          "title": "Limits",
          "description": "The maximum resources your app can use",
          "required": [
            "cpu",
            "memory"
          ],
          "properties": {
            "cpu": {
              "$id": "#/properties/resources/properties/limits/properties/cpu",
              "type": "string",
              "title": "CPU"
            },
            "memory": {
              "$id": "#/properties/resources/properties/limits/properties/memory",
              "type": "string",
              "title": "Memory"
            }
          }
        }
      }
    }
  }
}
